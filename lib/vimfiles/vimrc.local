if $TERM !~ "linux"
	syntax on
	set t_Co=256
	colorscheme crystallite
else
	syntax on
	colorscheme elflord
endif

" disable mouse input
set mouse-=a

filetype plugin indent on
" show existing tab with 2 spaces width
set tabstop=2
" " when indenting with '>', use 2 spaces width
set shiftwidth=2
" " On pressing tab, insert 2 spaces
set expandtab
